<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>items</key>
    <array>
        <dict>
            <key>cell</key>
            <string>PSSwitchCell</string>
            <key>cellClass</key>
            <string>SASwitchTableCell</string>
            <key>default</key>
            <true/>
            <key>key</key>
            <string>artworkEnabled</string>
            <key>label</key>
            <string>Enabled</string>
            <key>PostNotification</key>
            <string>se.nosskirneh.springartwork/settingsChanged</string>
        </dict>


        <dict>
            <key>cell</key>
            <string>PSLinkCell</string>
            <key>detail</key>
            <string>SAAppListController</string>
            <key>isController</key>
            <true/>
            <key>label</key>
            <string>Disabled apps</string>
        </dict>

        <dict>
            <key>cell</key>
            <string>PSGroupCell</string>
            <key>label</key>
            <string>Background</string>
        </dict>

        <dict>
            <key>cell</key>
            <string>PSSegmentCell</string>
            <key>defaults</key>
            <string>se.nosskirneh.springartwork</string>
            <key>key</key>
            <string>artworkBackgroundMode</string>
            <key>validTitles</key>
            <array>
                <string>Matching color</string>
                <string>Blurred</string>
                <string>Static color</string>
            </array>
            <key>validValues</key>
            <array>
                <string>0</string>
                <string>1</string>
                <string>2</string>
            </array>
            <key>default</key>
            <string>1</string>
        </dict>

        <dict>
            <key>id</key>
            <string>staticColor</string>
            <key>cell</key>
            <string>PSLinkCell</string>
            <key>cellClass</key>
            <string>PFSimpleLiteColorCell</string>
            <key>libcolorpicker</key>
            <dict>
                <key>defaults</key>
                <string>se.nosskirneh.springartwork</string>
                <key>key</key>
                <string>staticColor</string>
                <key>fallback</key>
                <string>#000000</string>
                <key>alpha</key>
                <false/>
                <key>PostNotification</key>
                <string>se.nosskirneh.springartwork/settingsChanged</string>
            </dict>
            <key>label</key>
            <string>Static color</string>
        </dict>


        <!-- Artwork width percentage -->
        <dict>
            <key>cell</key>
            <string>PSGroupCell</string>
            <key>label</key>
            <string>Artwork width percentage</string>
        </dict>
        <dict>
            <key>cell</key>
            <string>PSSliderCell</string>
            <key>label</key>
            <string>Corner radius</string>
            <key>defaults</key>
            <string>se.nosskirneh.springartwork</string>
            <key>key</key>
            <string>artworkWidthPercentage</string>
            <key>isSegmented</key>
            <true/>
            <key>segmentCount</key>
            <integer>8</integer>
            <key>showValue</key>
            <true/>
            <key>min</key>
            <integer>20</integer>
            <key>max</key>
            <integer>100</integer>
            <key>default</key>
            <string>100</string>
        </dict>
    </array>
    <key>title</key>
    <string>Normal artwork</string>
</dict>
</plist>
